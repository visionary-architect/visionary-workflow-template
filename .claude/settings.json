{
  "env": {
    "CLAUDE_CODE_ENABLE_TASKS": "true",
    "CLAUDE_CODE_TASK_LIST_ID": "{{PROJECT_SLUG}}",
    "CLAUDE_SESSION_TAG": "main"
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/lifecycle/session_start.py",
            "timeout": 15000
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/lifecycle/user_prompt_submit.py --log-only --store-last-prompt --name-agent --validate",
            "timeout": 10000
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/session/warmup_cache.py",
            "async": true,
            "timeout": 10000
          },
          {
            "type": "command",
            "command": "python .claude/hooks/session/session_coordinator.py",
            "async": true,
            "timeout": 5000
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/validators/dangerous_command_checker.py",
            "async": false,
            "timeout": 5000
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/session/file_conflict_checker.py",
            "async": false,
            "timeout": 3000
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/lifecycle/permission_request.py --auto-allow",
            "timeout": 3000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/intel/codebase_indexer.py",
            "async": true,
            "timeout": 30000
          },
          {
            "type": "command",
            "command": "python .claude/hooks/validators/invariant_validator.py $CLAUDE_FILE_PATH",
            "async": false,
            "timeout": 10000
          },
          {
            "type": "command",
            "command": "python .claude/hooks/validators/json_validator.py $CLAUDE_FILE_PATH",
            "async": true,
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "python .claude/hooks/validators/markdown_validator.py $CLAUDE_FILE_PATH",
            "async": true,
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "python .claude/hooks/intel/file_change_tracker.py",
            "async": true,
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "python .claude/hooks/validators/ruff_validator.py",
            "async": false,
            "timeout": 120000
          },
          {
            "type": "command",
            "command": "python .claude/hooks/validators/ty_validator.py",
            "async": false,
            "timeout": 120000
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/intel/test_result_tracker.py",
            "async": true,
            "timeout": 60000
          },
          {
            "type": "command",
            "command": "python .claude/hooks/intel/event_logger.py",
            "async": true,
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "python .claude/hooks/validators/commit_validator.py",
            "async": true,
            "timeout": 5000
          }
        ]
      },
      {
        "matcher": "TodoWrite",
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/session/task_claim_validator.py",
            "async": true,
            "timeout": 5000
          }
        ]
      }
    ],
    "PostToolUseFailure": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/lifecycle/post_tool_use_failure.py",
            "timeout": 5000
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/lifecycle/notification.py",
            "async": true,
            "timeout": 5000
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/lifecycle/subagent_start.py",
            "async": true,
            "timeout": 5000
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/lifecycle/subagent_stop.py --notify --summarize",
            "async": true,
            "timeout": 15000
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/session/task_completion_reminder.py",
            "timeout": 3000
          },
          {
            "type": "command",
            "command": "python .claude/hooks/session/auto_snapshot.py",
            "async": true,
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "python .claude/hooks/session/auto_devlog.py",
            "async": true,
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "python .claude/hooks/lifecycle/stop_completion.py",
            "async": true,
            "timeout": 10000
          },
          {
            "type": "command",
            "command": "python .claude/hooks/session/session_cleanup.py",
            "async": true,
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "python .claude/hooks/session/session_maintenance.py",
            "async": true,
            "timeout": 10000
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/lifecycle/pre_compact.py --backup",
            "async": true,
            "timeout": 10000
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python .claude/hooks/lifecycle/session_end.py",
            "async": true,
            "timeout": 5000
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "python .claude/status_lines/v6_context_bar.py",
    "timeout": 3000
  },
  "permissions": {
    "allow": [
      "Bash(git status*)",
      "Bash(git diff*)",
      "Bash(git log*)",
      "Bash(git branch*)",
      "Bash(git tag*)",
      "Bash(git add*)",
      "Bash(git commit*)",
      "Bash(git push*)",
      "Bash(npm run test*)",
      "Bash(npm run build*)",
      "Bash(npm run lint*)",
      "Bash(pytest*)",
      "Bash(python -m*)",
      "Bash(ls*)",
      "Bash(dir*)",
      "Bash(cat*)",
      "Bash(type*)",
      "Bash(find*)",
      "Bash(python .claude/hooks/*)",
      "Bash(python3 .claude/hooks/*)",
      "Bash(uv run .claude/hooks/*)",
      "Bash(ruff *)",
      "Bash(uv run ruff*)",
      "Bash(uv run mypy*)",
      "Bash(uv run pytest*)"
    ]
  }
}
